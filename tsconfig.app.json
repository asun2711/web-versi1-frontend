{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    // File build info untuk incremental compilation
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    // TypeScript akan mengenali environment Vite
    "types": ["vite/client"],

    /* ================= Strict Mode & Linting ================= */
    "strict": true,                         
    "noUnusedLocals": true,                 
    "noUnusedParameters": true,             
    "noFallthroughCasesInSwitch": true,     
    "noUncheckedSideEffectImports": true,   
    "erasableSyntaxOnly": true,

    /* ================= Path Alias ================= */
    "baseUrl": ".",                         
    "paths": {
      "@/*": ["src/*"]
    }
  },

  // File/folder yang akan di-compile
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
